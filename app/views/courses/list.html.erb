<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
        
          <%= form_tag list_courses_path 1, method: :post do %>
            <div class="form-group form-inline">
              <label for="course[course_time]">上课时间</label>
              <select name="course[course_time]">
                <option value="">不限</option>
                <option value="1">周一</option>
                <option value="2">周二</option>
                <option value="3">周三</option>
                <option value="4">周四</option>
                <option value="5">周五</option>
                <option value="6">周六</option>
                <option value="7">周日</option>
              </select>

              <label for="course[course_type]">课程属性</label>
              <select name="course[course_type]">
                <option value="">不限</option>
                <option value="专业核心课">专业核心课</option>
                <option value="一级学科核心课">一级学科核心课</option>
                <option value="专业普及课">专业普及课</option>
                <option value="专业研讨课">专业研讨课</option>
                <option value="一级学科普及课">一级学科普及课</option>     
                <option value="公共选修课">公共选修课</option>          
              </select>
            


              <%= label_tag(:keyword, "课程名称") %>
              <%= text_field_tag(:keyword) %>
              <%= submit_tag("查询") %>

            </div>
          <% end %>


          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>上课时间</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>操作</th>

            </tr>
            </thead>
            <tbody>

            <% @valid_course.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.course_time %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
          <%= will_paginate @valid_course %>
        </div>
      </div>
    </div>
  </div>
</div>


